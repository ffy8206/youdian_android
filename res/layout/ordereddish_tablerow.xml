<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="horizontal" android:gravity="center_vertical">
	<TextView android:layout_width="140dip"
		android:layout_height="wrap_content" android:id="@+id/text_dishname"
		android:textSize="18sp" android:textColor="#000000"/>
	<LinearLayout android:layout_width="150dip"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:gravity="center_vertical">
		<ImageButton android:layout_width="wrap_content" android:layout_weight="0.2"
			android:layout_height="wrap_content" android:id="@+id/imgbtn_minus" 
			android:src="@drawable/order_imgbtn_minus" android:background="#00000000"/>
		<EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:id="@+id/edit_dishnum" android:textSize="18sp"
			android:editable="false" android:layout_weight="0.3"/>
		<ImageButton android:layout_width="wrap_content" android:layout_weight="0.2"
			android:layout_height="wrap_content" android:id="@+id/imgbtn_plus" 
			android:src="@drawable/order_imgbtn_plus" android:background="#00000000"/>
	</LinearLayout>
	<TextView android:layout_width="110dip"
		android:layout_height="wrap_content" android:id="@+id/text_dishprice" 
		android:textSize="18dip" android:textColor="#000000" android:layout_marginLeft="60dip"/>
	<ImageButton android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/imgbtn_dishdelete" 
		android:src="@drawable/order_imgbtn_delete" android:background="#00000000"/>
</LinearLayout>
